<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:padding="1dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/key_border"/>

    <!-- Numbers Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/key_1"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="1"/>
        <Button
            android:id="@+id/key_2"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="2"/>
        <Button
            android:id="@+id/key_3"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="3"/>
        <Button
            android:id="@+id/key_4"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="4"/>
        <Button
            android:id="@+id/key_5"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="5"/>
        <Button
            android:id="@+id/key_6"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="6"/>
        <Button
            android:id="@+id/key_7"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="7"/>
        <Button
            android:id="@+id/key_8"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="8"/>
        <Button
            android:id="@+id/key_9"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="9"/>
        <Button
            android:id="@+id/key_0"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="0"/>
    </LinearLayout>

    <!-- QWERTY Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/key_q"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="q"/>
        <Button
            android:id="@+id/key_w"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="w"/>
        <Button
            android:id="@+id/key_e"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="e"/>
        <Button
            android:id="@+id/key_r"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="r"/>
        <Button
            android:id="@+id/key_t"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="t"/>
        <Button
            android:id="@+id/key_y"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="y"/>
        <Button
            android:id="@+id/key_u"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="u"/>
        <Button
            android:id="@+id/key_i"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="i"/>
        <Button
            android:id="@+id/key_o"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="o"/>
        <Button
            android:id="@+id/key_p"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="p"/>
    </LinearLayout>

    <!-- ASDF Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

        <Button
            android:id="@+id/key_a"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="a"/>
        <Button
            android:id="@+id/key_s"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="s"/>
        <Button
            android:id="@+id/key_d"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="d"/>
        <Button
            android:id="@+id/key_f"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="f"/>
        <Button
            android:id="@+id/key_g"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="g"/>
        <Button
            android:id="@+id/key_h"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="h"/>
        <Button
            android:id="@+id/key_j"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="j"/>
        <Button
            android:id="@+id/key_k"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="k"/>
        <Button
            android:id="@+id/key_l"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="l"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>

    <!-- ZXCV Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/key_shift"
            style="@style/GboardKeyStyle.Image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:src="@drawable/ic_shift"/>
        <Button
            android:id="@+id/key_z"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="z"/>
        <Button
            android:id="@+id/key_x"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="x"/>
        <Button
            android:id="@+id/key_c"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="c"/>
        <Button
            android:id="@+id/key_v"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="v"/>
        <Button
            android:id="@+id/key_b"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="b"/>
        <Button
            android:id="@+id/key_n"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="n"/>
        <Button
            android:id="@+id/key_m"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="m"/>
        <ImageButton
            android:id="@+id/key_backspace"
            style="@style/GboardKeyStyle.Image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:src="@drawable/ic_backspace"/>
    </LinearLayout>

    <!-- Bottom Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/key_symbols"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="\?123"/>
        <ImageButton
            android:id="@+id/key_emoji"
            style="@style/GboardKeyStyle.Image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/ic_emoji"/>
        <Button
            android:id="@+id/key_space"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:text=""/>
        <Button
            android:id="@+id/key_period"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="."/>
        <Button
            android:id="@+id/key_enter"
            style="@style/GboardKeyStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="â†µ"/>
    </LinearLayout>

</LinearLayout> 